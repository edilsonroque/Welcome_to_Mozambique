<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imagemPerfil"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icone_user_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"/>

    <View
        android:id="@+id/viewSuporte"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagemPerfil"
        app:layout_constraintEnd_toEndOf="@+id/imagemPerfil"
        app:layout_constraintStart_toStartOf="@+id/imagemPerfil"
        app:layout_constraintTop_toTopOf="@+id/imagemPerfil"
        />

    <TextView
        android:id="@+id/nomeUtilizador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nome do utilizador"
        android:textColor="#55607F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/viewSuporte"
        app:layout_constraintStart_toEndOf="@+id/imagemPerfil"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Email"
        android:textColor="#276977"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imagemPerfil"
        app:layout_constraintTop_toBottomOf="@+id/viewSuporte"
        />

</androidx.constraintlayout.widget.ConstraintLayout>